// .qv-object-com-qliktech-qshighlightmap
.qv-object-qshighlightmap
	font-family arial
	.qv-object-qshighlightmap-mapdiv
		width 100%
		height 100%
		background #000
	
	.qv-highlight-canvas
		position absolute
		z-index 1000
		opacity 0
		transition opacity 0.3s
	
	.qv-time-nav
		width 100%
		font-size 1.5em
		position absolute
		bottom 0
		right 0
		float right
		z-index 2000
		white-space nowrap
		text-align center
		margin-right -50%
		left 50%
		transform translate(-50%, 0)
		.nav-btn
			padding 0.5em 1em
			background-color #000
			color #fff
			// float left
			cursor pointer
			display inline-block
		.nav-btn:nth-child(2)
			border-left 1px solid #ddd
		
		
	.canvas-visible
		opacity 1

	.qv-time-header
		z-index 2000
		top 0
		width 100%
		left 0
		position absolute
		color #000
		background-color #fff
		padding 1em
		text-align center
		font-size 120%
		font-weight bold
		font-family arial
		label
			display block
			margin-left 30%
			opacity 0
			transition all 0.5s
	
	.qv-time-header label.qv-time-header-slidein
		margin-left 0
		transition all 0.5s
		opacity 1
		
	.qv-time-header label.qv-time-header-slideout
		margin-left -100%
		transition all 0.5s

	div.leaflet-pane.leaflet-overlay-pane]
		opacity 1
		margin 0
		filter none
	
	.layer-transition-opacity
		transition opacity 0.5s !important  // filter 0.3s
		
	.layer-dimmed
		opacity 0
		// filter blur(100px)
	
	.leaflet-top .leaflet-control
		margin-top 6em

	.leaflet-popup-content h3
		font-size 0.9em
	
	.leaflet-popup-content-wrapper, .leaflet-popup-tip
		background #000
		color #fff
		font-size 1.5em	

